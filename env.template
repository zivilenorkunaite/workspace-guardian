# Workspace Guardian - Environment Configuration
# Copy this file to .env and fill in your workspace-specific values

# ============================================================================
# LOCAL DEVELOPMENT ONLY
# Note: These are NOT needed when deploying as a Databricks App
# ============================================================================

# Databricks Workspace (required for local development)
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=dapi...your-token-here

# ============================================================================
# REQUIRED FOR BOTH LOCAL AND APP DEPLOYMENT
# ============================================================================

# SQL Warehouse (required)
# Get this from: Databricks Console > SQL Warehouses > Your Warehouse > Connection Details
DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# Unity Catalog Configuration (required)
# Use your catalog name (e.g., "main", "production", "dev")
APP_CATALOG=main
APP_SCHEMA=workspace_guardian

# ============================================================================
# OPTIONAL
# ============================================================================

# Application version
APP_VERSION=1.0.0

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
